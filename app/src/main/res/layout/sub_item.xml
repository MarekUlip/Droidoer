<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:layout_marginBottom="50dp">

    <TextView
        android:id="@+id/text_sub_task"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textColor="#000000"
        android:layout_marginStart="@dimen/sub_item_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/but_cancel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/but_cancel"
        android:layout_width="@dimen/but_width"
        android:layout_height="@dimen/but_width"
        android:text="@string/delete_mark"
        app:layout_constraintEnd_toStartOf="@+id/but_meh"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/but_meh"
        android:layout_width="@dimen/but_width"
        android:layout_height="@dimen/but_width"
        android:text="@string/meh_mark"
        app:layout_constraintEnd_toStartOf="@+id/but_done"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/but_done"
        android:layout_width="@dimen/but_width"
        android:layout_height="@dimen/but_width"
        android:layout_marginEnd="8dp"
        android:textColor="#00A800"
        android:text="@string/check_mark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>